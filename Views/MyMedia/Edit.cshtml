@model ImageProject.ViewModels.MyMediaViewModels.MyMediaEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MyMediaEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumCategoryId" />
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <img src="@("/uploads/" + Model.ImagePath)" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div>

            </div>
            <div class="form-group">
                <label asp-for="AlbumCategoryId" class="control-label"></label>
                <select asp-for="AlbumCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.AlbumCategories, "Id", "Title", Model.AlbumCategoryId))"></select>
                <span asp-validation-for="AlbumCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
